# .env.example - Template for environment configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=benchmark
DB_PASSWORD=benchmark123
DB_NAME=perf_framework
DB_DRIVER=pymysql

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
API_WORKERS=1
API_LOG_LEVEL=info

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=*

# =============================================================================
# PATHS CONFIGURATION
# =============================================================================
# Base directory for the application (leave empty to use package directory)
BASE_DIR=

# Directory paths (relative to BASE_DIR or absolute)
CONTRACTS_DIR=contracts
TEST_TYPES_DIR=contracts/tests
ENVIRONMENTS_DIR=contracts/environments
ARTIFACTS_DIR=artifacts
TEMP_DIR=temp
UPLOAD_DIR=uploads
LOGS_DIR=logs

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
ENABLE_FILE_LOGGING=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-very-secret-key-change-in-production
ENABLE_AUTH=false
MAX_FILE_SIZE=104857600

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# DOCKER COMPOSE SPECIFIC (for infrastructure)
# =============================================================================
# MySQL
MYSQL_ROOT_PASSWORD=benchmark123
MYSQL_DATABASE=perf_framework
MYSQL_USER=benchmark
MYSQL_PASSWORD=benchmark123
MYSQL_PORT=3306

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_PORT=3000

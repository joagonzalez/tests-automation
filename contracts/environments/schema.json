{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": ["isolated", "shared"]
      },
      "resources": {
        "type": "object",
        "properties": {
          "cpu": {
            "type": "integer",
            "minimum": 1
          },
          "memory": {
            "type": "string",
            "pattern": "^[0-9]+(Mi|Gi)$"
          }
        },
        "required": ["cpu", "memory"]
      },
      "tools": {
        "type": "object",
        "properties": {
          "sysbench": {
            "type": "string"
          },
          "ramspeed": {
            "type": "string"
          },
          "memory_latency": {
            "type": "string"
          }
        },
        "required": ["sysbench", "ramspeed", "memory_latency"]
      },
      "storage": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "format": {
            "type": "string",
            "enum": ["sqlite", "json", "csv"]
          }
        },
        "required": ["path", "format"]
      },
      "credentials": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "host": {
            "type": "string"
          },
          "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          "database": {
            "type": "string"
          }
        },
        "required": ["username", "password", "host", "port", "database"]
      },
      "infrastructure": {
        "type": "object",
        "properties": {
          "vcf": {
            "type": "string"
          },
          "nsx_t": {
            "type": "string"
          },
          "vcenter": {
            "type": "string"
          },
          "esxi": {
            "type": "string"
          }
        },
        "required": ["vcf", "nsx_t", "vcenter", "esxi"]
      }
    },
    "required": ["name", "type", "resources", "tools", "storage", "credentials", "infrastructure"]
  }